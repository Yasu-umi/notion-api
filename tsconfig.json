{
  "compilerOptions": {
    "target": "es3",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist/",
    "plugins": [{
      "transform": "typescript-is/lib/transform-inline/transformer"
    }],
    "types": [
      "jest"
    ],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}